<div class="d-flex justify-content-center">
  <%= form_with model: @hospital do |f| %>
    <div class="field">
      <%= f.label :病院画像 %>
      <%= f.file_field :hospital_image, placeholder: "病院画像", accept: "image/*" %>
    </div>

    <div class="field">
      <%= f.label :病院名 %>
      <%= f.text_field :name, placeholder: "病院名", accept: "name" %>
    </div>

    <!--<div class="field">-->
    <!--  <%#= f.label :診療科 %>-->
    <!--  <%#= f.text_field :, placeholder: "診療科名", accept: "name" %>-->
    <!--</div>-->

    <div class="field">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number, placeholder: "電話番号", accept: "telephone_number" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :postal_code, placeholder: "郵便番号", accept: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, placeholder: "住所", accept: "address" %>
    </div>

    <div class="field">
      <%= f.label :ホームページURL %>
      <%= f.text_field :home_page, placeholder: "URL", accept: "home_page" %>
    </div>

    <div class="field">
      <table>
        <tr>
          <th> </th>
          <th>診察開始時間</th>
          <th>診察終了時間</th>
          <th>月</th>
          <th>火</th>
          <th>水</th>
          <th>木</th>
          <th>金</th>
          <th>土</th>
          <th>日</th>
          <th>祝日</th>
        </tr>
        <tr>
          <td>午前</td>
          <td><%= f.time_select :am_start_time %></td>
          <td><%= f.time_select :pm_start_time %></td>
        </tr>
      </table>
    </div>


    <div class="actions">
      <%= f.submit "保存" %>

    </div>
  <% end %>
</div>
