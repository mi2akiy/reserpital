<div class="d-flex justify-content-center">
  <%= form_with model: @end_user, url:public_end_users_path, method: :patch do |f| %>

    <div class="field">
      <%= f.label :名前（姓） %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= f.label :名前（名） %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :フリガナ（セイ） %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :フリガナ（メイ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :性別 %><br />
      <%= f.radio_button :sex, '男性' %>
      <%= f.label :sex, '男性' %>

      <%= f.radio_button :sex, '女性' %>
      <%= f.label :sex, '女性' %>
    </div>

    <div class="field">
      <%= f.label :生年月日 %><br />
      <%= f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1) %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %><br />
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="actions">
      <%= f.submit submit %>

    </div>
  <% end %>
</div>